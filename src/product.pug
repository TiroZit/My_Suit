extends ../assets/pug/_base
block vars
  - var lang = 'ru'
  - var title = 'My Suit | Наименование товара'
  - var description = ''
  - var keywords = ''
  //- Open Graph:
  - var type = 'website'
  - var imageOG = ''
  //- Preload fonts
  - var fonts = ['Manrope-Medium', 'Manrope-Regular', 'Manrope-Light' ]

include pug/_breadcrumbs
block content
  .wrapper
    include pug/_header
    main.page.page_product
      +breadcrumbs([
        {
          name: "Главная",
          path: "home.html"
        },
        {
          name: "Каталог",
          path: "catalog.html"
        },
        {
          name: "Наименование товара",
          path: "product.html"
        }
      ])
      .product
        .product__container
          .product__main.main-product 
            .main-product__images.images-product
              .images-product__thumbs.thumbs-images
                .thumbs-images__swiper
                  .thumbs-images__slide-ibg
                    +image('img/goods/1.jpg', 'alt').lazy
                  .thumbs-images__slide-ibg
                    +image('img/goods/1.jpg', 'alt').lazy
                  .thumbs-images__slide-ibg
                    +image('img/goods/1.jpg', 'alt').lazy
                  .thumbs-images__slide-ibg
                    +image('img/goods/1.jpg', 'alt').lazy
              .images-product__slider
                .images-product__swiper
                  .images-product__slide-ibg
                    +image('img/goods/1.jpg', 'alt').swiper-lazy
                  .images-product__slide-ibg
                    +image('img/goods/1.jpg', 'alt').swiper-lazy
                  .images-product__slide-ibg
                    +image('img/goods/1.jpg', 'alt').swiper-lazy
                  .images-product__slide-ibg
                    +image('img/goods/1.jpg', 'alt').swiper-lazy
              p.images-product__description Мы любим это платье за лаконизм в длине и дизайне. Приталенный силуэт, минимум деталей.  Ничего лишнего - именно это и привлекает внимание
            .main-product__info.info-product
              .info-product__block-title
                h1.info-product__title Шёлковый костюм в красном цвете
                button.info-product__btn-favourites(aria-label='Добавить в избранное')
                  +icon('favourites').i-favourites(style='stroke: currentColor;' aria-hidden)
              .info-product__block-prices 
                span.info-product__price 13900 RUB
                s.info-product__price-old 15900 RUB
              .info-product__block-sizes
                .info-product__size-inner 
                  .info-product__title-size Размер
                  a.info-product__choose-size(href="#") Подобрать размер
                ul.info-product__size-list 
                  li.info-product__size-item 
                    button.info-product__btn-size.info-product__btn-size_active.btn.btn_white 40
                  li.info-product__size-item 
                    button.info-product__btn-size.btn.btn_white 42
                  li.info-product__size-item 
                    button.info-product__btn-size.btn.btn_white 44
              .info-product__block-colors 
                .info-product__title-color Цвет
                ul.info-product__color-list 
                  li.info-product__color-item 
                    a.info-product__link-color(href="#" style="background-color: #F4DEDE;")
                  li.info-product__color-item 
                    a.info-product__link-color(href="#" style="background-color: #AD3A9B;")
              .info-product__block-btns 
                button.info-product__btn.info-product__btn_buy.btn.btn_white Быстрая покупка
                button.info-product__btn.info-product__btn_cart.btn.btn_black Добавить в корзину
              .info-product__spollers.spollers-product(data-spollers)
                .spollers-product__spoller
                  button.spollers-product__title(data-spoller)
                    | Состав
                    +icon('plus').i-plus(aria-hidden)
                  .spollers-product__content
                .spollers-product__spoller
                  button.spollers-product__title(data-spoller)
                    | Рекомендации по уходу
                    +icon('plus').i-plus(aria-hidden)
                  .spollers-product__content
                .spollers-product__spoller
                  button.spollers-product__title(data-spoller)
                    | Параметры модели
                    +icon('plus').i-plus(aria-hidden)
                  .spollers-product__content
    include pug/_footer