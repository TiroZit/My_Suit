extends ../assets/pug/_base
block vars
  - var lang = 'ru'
  - var title = 'My Suit | Наименование товара'
  - var description = ''
  - var keywords = ''
  //- Open Graph:
  - var type = 'website'
  - var imageOG = ''
  //- Preload fonts
  - var fonts = ['Manrope-Medium', 'Manrope-Regular', 'Manrope-Light' ]

include pug/_breadcrumbs
block content
  .wrapper
    include pug/_header
    main.page.page_product
      +breadcrumbs([
        {
          name: "Главная",
          path: "home.html"
        },
        {
          name: "Каталог",
          path: "catalog.html"
        },
        {
          name: "Наименование товара",
          path: "product.html"
        }
      ])
      .product
        .product__container
          .product__main.main-product 
            .main-product__images.images-product
              .images-product__thumbs.thumbs-images
                .thumbs-images__swiper
                  .thumbs-images__slide-ibg
                    +image('img/goods/1.jpg', 'alt').lazy
                  .thumbs-images__slide-ibg
                    +image('img/goods/1.jpg', 'alt').lazy
                  .thumbs-images__slide-ibg
                    +image('img/goods/1.jpg', 'alt').lazy
                  .thumbs-images__slide-ibg
                    +image('img/goods/1.jpg', 'alt').lazy
              .images-product__slider
                .images-product__swiper
                  .images-product__slide-ibg
                    +image('img/goods/1.jpg', 'alt').swiper-lazy
                  .images-product__slide-ibg
                    +image('img/goods/1.jpg', 'alt').swiper-lazy
                  .images-product__slide-ibg
                    +image('img/goods/1.jpg', 'alt').swiper-lazy
                  .images-product__slide-ibg
                    +image('img/goods/1.jpg', 'alt').swiper-lazy
    include pug/_footer